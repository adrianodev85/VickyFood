@model CartViewModel

<div class="container">
    <div class="row">
        <div class="d-inline-flex">
            <div>
                <img src="/img/WebIcon01_Cart.png" width="50" height="50" />
            </div>
            &nbsp;
            <h2>Your Shopping Cart</h2>
        </div>
        &nbsp;
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Amount</th>
                    <th>Product</th>
                    <th>Price</th>
                    <th>SubTotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Cart.CartItems)
                {
                    <tr>
                        <td>@item.Amount</td>
                        <td><img src="@item.Product.UrlImage" width="20" height="20" /> @item.Product.ProductName</td>
                        <td>@item.Product.Price.ToString("F2")</td>
                        <td>@((item.Amount * item.Product.Price).ToString("F2"))</td>
                        <td>
                            <a asp-area="" asp-controller="Cart" asp-action="RemoveItemFromCart"
                               asp-route-productId="@item.Product.ProductId">
                                <img src="/img/WebIcon02_Trash.png" width="20" height="20" /> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3">Total:</td>
                    <td>@Model.CartTotal.ToString("F2")</td>
                </tr>
            </tfoot>
        </table>
        <div>
            <div class="btn-group">
                <a class="btn btn-success" asp-area="" asp-controller="Order" asp-action="Checkout">Close Order</a>
                &nbsp;
                <a class="btn btn-primary" asp-area="" asp-controller="Product" asp-action="List">Keep Buying</a>
            </div>
        </div>
    </div>
</div>
