@model Order

<div class="container">
    <div class="jumbotron">
        <h2>@ViewBag.CheckoutMessageComplete</h2>
    </div>
    <div class="card">
        <div class="card-body">
            <p>Customer: <strong>@Model.Name @Model.Surname</strong></p>
            <p>Address: <strong>@Model.Address1, @Model.Address2, @Model.City</strong></p>
            <p>Phone: <strong>@Model.Phone</strong></p>
            <p>Order Date: <strong>@Model.OrderDispatched</strong></p>
            <table class="table">
                <tr>
                    <th></th>
                    <th>Product</th>
                    <th>Amount</th>
                    <th>Price</th>
                </tr>
                @foreach(var item in Model.OrderItems)
                {
                    <tr>
                        <td><img src="@item.Product.UrlImage" width="40" height="40" /></td>
                        <td>@item.Product.ProductName</td>
                        <td>@item.Amount</td>
                        <td>$ @item.Price.ToString("F2")</td>
                    </tr>
                }
            </table>
            <h4>Order Total Value: $ <strong>@(((decimal)ViewBag.OrderTotal).ToString("F2"))</strong></h4>
        </div>
    </div>
    <div class="form-group" style="text-align:center">
        <h3>
            <a class="nav-link text-info" asp-controller="Home" asp-action="Index">Return</a>
        </h3>
    </div>
</div>