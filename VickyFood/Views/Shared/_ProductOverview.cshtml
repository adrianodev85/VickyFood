@model Product

<div class="col-sm-4 col-md-4 col-lg-4 text-center">
    <p><img src="@Model.UrlImage" /></p>
    <h3>
        <a asp-controller="Product" asp-action="Details"
           asp-route-productId="@Model.ProductId">@Model.ProductName</a>
    </h3>
    <h5>@Model.ProductShortDescription</h5>
    <h4>$ @Model.Price.ToString("F2")</h4>
    <div class="button">
        <a class="btn btn-primary" id="cartButton" asp-controller="Cart" asp-action="AddItemToCart"
            asp-route-productId="@Model.ProductId">Add to Cart</a>
    </div>
</div>